<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samiapps.kv.roobaruduniya">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name=".MApplication"
        android:allowBackup="true"
        android:icon="@drawable/roobaru_logo"
        android:label="@string/app_name"


        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more. -->
     <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/roobaru_logo" />



        <activity android:name=".TrialActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">


            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <service
            android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".FirebaseIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <activity android:name=".WriteArticleActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"

            />

        <activity android:name=".ArticleDetail"

            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar">
        <intent-filter>
            <action android:name="com.samiapps.kv.roobaruduniya.getNotif" />
            <category android:name="android.intent.category.DEFAULT"/>

        </intent-filter>





          </activity>
        <activity android:name=".EditorArticleActivity"></activity>
        <activity android:name=".publishDetail"></activity>
        <activity android:name=".NotificationList"></activity>
        <activity android:name=".AboutUsActivity"></activity>

    </application>

</manifest>